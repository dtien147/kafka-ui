{
  "name": "kafka-ui",
  "private": true,
  "main": "dist/main.js",
  "version": "1.0.0",
  "author": {
    "name": "Siris"
  },
  "description": "Kafka UI",
  "workspaces": [
    "app/frontend",
    "app/server",
    "app/shared"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "start:fe": "yarn workspace frontend start",
    "start:server": "yarn workspace server start",
    "dev": "concurrently \"yarn start:server\" \"yarn start:fe\" \"yarn electron:dev\"",
    "electron:dev": "wait-on tcp:5173 && electron .",
    "preelectron:debug": "yarn build:ts",
    "electron:debug": "electron .",
    "copy:fe": "mkdirp ./dist/frontend/ && cpx \"app/frontend/dist/**\" dist/app/frontend",
    "build:ts": "swc main.ts -d dist",
    "build:fe": "yarn workspace frontend build && yarn copy:fe",
    "build": "yarn build:ts && yarn build:fe && electron-builder --win",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.20",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cpx2": "^8.0.0",
    "css-loader": "^7.1.2",
    "electron": "^35.1.5",
    "electron-packager": "^17.1.2",
    "esbuild": "^0.25.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "mkdirp": "^3.0.1",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.4",
    "style-loader": "^4.0.0",
    "swc-loader": "^0.2.6",
    "tailwindcss": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "avsc": "^5.7.7"
  }
}
