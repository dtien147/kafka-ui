{
  "name": "kafka-ui",
  "private": true,
  "main": "dist/main.js",
  "version": "1.0.0",
  "author": {
    "name": "Siris"
  },
  "description": "Kafka UI",
  "workspaces": [
    "app/frontend",
    "app/server",
    "app/shared"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "start:fe": "yarn workspace frontend start",
    "start:server": "yarn workspace server start",
    "dev": "concurrently \"yarn start:server\" \"yarn start:fe\" \"yarn electron:dev\"",
    "electron:dev": "wait-on tcp:5173 && electron .",
    "preelectron:debug": "yarn build:ts",
    "electron:debug": "electron .",
    "copy:fe": "mkdirp ./dist/frontend/ && cpx \"app/frontend/dist/**\" dist/app/frontend",
    "build:ts": "node esbuild.config.js",
    "build:fe": "yarn workspace frontend build && yarn copy:fe",
    "build": "yarn build:ts && yarn build:fe && electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cpx2": "^8.0.0",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "mkdirp": "^3.0.1",
    "prettier": "^3.2.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "avsc": "^5.7.7"
  },
  "build": {
    "asar": false,
    "appId": "com.kafka.ui",
    "productName": "Kafka UI",
    "win": {
      "target": "dir"
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "dist/main.js",
      "dist/app/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main.js"
    }
  }
}
